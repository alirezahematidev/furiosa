{
  "name": "furiosa-lib",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build:form": "pnpm -r --filter='./packages/form' run build",
