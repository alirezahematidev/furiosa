    "release": "pnpm build && tsx scripts/release.ts"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@vitejs/release-scripts": "^1.3.1",
    "execa": "^9.3.0",
    "fast-glob": "^3.3.2",
    "rimraf": "^5.0.7",
    "tsx": "^4.16.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.2",
    "vite-tsconfig-paths": "^4.3.2"
  }
}
