{
  "name": "@furiosa/form",
  "version": "1.0.0-alpha.4",
  "type": "module",
  "sideEffects": false,
  "license": "MIT",
  "description": "A lightweight observable form management powered by @legendapp/state",
  "author": "Alireza Hemati",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/main.d.ts",
        "default": "./dist/main.js"
      }
    },
    "./hooks": {
      "import": {
        "types": "./dist/hooks.d.ts",
        "default": "./dist/hooks.js"
      }
    },
    "./components": {
      "import": {
        "types": "./dist/components.d.ts",
        "default": "./dist/components.js"
      }
    }
  },
  "keywords": [
    "form",
    "observable",
    "react"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --noEmit && tsup"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alirezahematidev/furiosa.git"
  },
  "bugs": {
    "url": "https://github.com/alirezahematidev/furiosa/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/alirezahematidev/furiosa#readme",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@legendapp/state": "3.0.0-alpha.14",
    "ulidx": "^2.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.2.22"
  }
}
